            </roles>
        </contributor>
        <contributor>
            <name>Dan Schmitt</name>
            <roles>
                <role>contributor</role>
            </roles>
        </contributor>
    </contributors>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>config.yml</include>
                </includes>
            </resource>
        </resources>
        <finalName>original</finalName>
        <plugins>
            <!-- BuildNumber Plugin -->
