    <modelVersion>4.0.0</modelVersion>

    <groupId>com.octopod</groupId>
    <artifactId>networkplus</artifactId>
    <version>TEST_BUILD</version>

    <name>NetworkPlus</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <scm>
        <connection>scm:git:http://git@github.com:TheOctopod/NetworkPlus.git</connection>
        <developerConnection>scm:git:http://git@github.com:TheOctopod/NetworkPlus.git</developerConnection>
        <url>scm:git:http://github.com/TheOctopod/NetworkPlus</url>
    </scm>

    <developers>
        <developer>
            <id>octopod</id>
            <name>Octopod</name>
            <email>gmail: octopodsquad</email>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <contributors>
        <contributor>
            <name>MetaSteel</name>
            <roles>
