            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <finalName>${project.name}</finalName>
                    <shadedArtifactAttached>false</shadedArtifactAttached>
                    <minimizeJar>true</minimizeJar>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <artifactSet>
                        <includes>
                            <include>com.octopod:octal</include>
                            <!--include>com.google.code.gson:gson</include-->
                        </includes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>com.octopod:octal</artifact>
                            <includes>
                                <include>com/octopod/util/minecraft/chat/**.class</include>
                                <include>com/octopod/util/minecraft/command/**.class</include>
                                <include>com/octopod/minecraft/**.class</include>
                                <include>com/octopod/minecraft/exceptions/**.class</include>
                                <include>com/octopod/util/common/FileUtil.class</include>
                                <include>com/octopod/util/common/Math.class</include>
                                <include>com/octopod/util/common/IOUtils.class</include>
                                <include>com/octopod/util/configuration/Configuration.class</include>
                                <include>com/octopod/util/configuration/yaml/YamlConfiguration.class</include>
                            </includes>
                        </filter>
                    </filters>
                    <relocations>
                        <relocation>
                            <pattern>com.octopod.minecraft</pattern>
                            <shadedPattern>com.octopod.networkplus.minecraft</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>com.octopod.util</pattern>
                            <shadedPattern>com.octopod.networkplus.util</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>com.google.gson</pattern>
                            <shadedPattern>com.octopod.lib.com.google.gson</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
